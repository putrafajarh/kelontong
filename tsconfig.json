{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "@/*": ["./src/frontend/*"],
      "@assets/*": ["./src/frontend/assets/*"],
      "@cmp/*": ["./src/frontend/components/*"],
      "@stores/*": ["./src/frontend/stores/*"],
      "@use/*": ["./src/frontend/use/*"],
      "@pages/*": ["./src/frontend/pages/*"],
      "@shared/*": ["./src/shared/*"],
    }
  },
  "include": ["src/frontend/**/*.ts", "src/frontend/**/*.d.ts", "src/frontend/**/*.tsx", "src/frontend/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
